<UserControl x:Class="massive_moose.client.silverlight.ProgressIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="340" Background="Transparent">

    <Border BorderThickness="2" BorderBrush="Black" CornerRadius="5" Padding="5" Background="White">
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="Text" Text="Uploading..." VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" Margin="10 0 0 0"></TextBlock>
            <ProgressBar x:Name="ProgressBar" Value="0" Width="200" Margin="10 0 0 0"></ProgressBar>
        </StackPanel>
    </Grid>
    </Border>
</UserControl>
